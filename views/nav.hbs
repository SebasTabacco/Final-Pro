<section class="news-container">
  <h2>Noticias del Día</h2>
  <marquee direction="left" scrollamount="5">
    <span>Noticia 1: Importante acontecimiento...</span>
    <span>Noticia 2: Actualización interesante...</span>
    <span>Noticia 3: Nuevo evento anunciado...</span>
  </marquee>
</section>

<section id="carousel-section">
  <div id="carouselImages" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="/image/novedades/1.jpg" class="d-block w-100" alt="Imagen 1">
      </div>
      <div class="carousel-item">
        <img src="/image/logo/Logo1.png" class="d-block w-100" alt="Imagen 2">
      </div>
      <div class="carousel-item">
        <img src="/image/novedades/mapeo.webp" class="d-block w-100" alt="Imagen 3">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselImages" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselImages" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Siguiente</span>
    </button>
  </div>
</section>

<section class="currency-ticker-container">
  <h2>Cambio de Divisas</h2>
  <marquee direction="left" scrollamount="5">
    <span><i class="fas fa-dollar-sign"></i> USD: $250 </span>
    <span><i class="fas fa-euro-sign"></i> EURO: €270 </span>
    <span><i class="fab fa-bitcoin"></i> BTC: ₿0.004 </span>
  </marquee>
</section>
