<div class="container" style="margin: 100px auto;">
  <div class="row">
    <div class="col-6 offset-3">
      <h4>Modificar Una Novedad</h4>
      <form action="/admin/novedades/modificar/{{novedad.id}}" method="post">
        <div class="mb-3">
          <input type="text" class="form-control" placeholder="Titulo" name="Titulo" value="{{novedad.Titulo}}" required>
        </div>
        <div class="mb-3">
          <input type="text" class="form-control" placeholder="Valor-USD" name="Valor-USD" value="{{lookup novedad 'Valor-USD'}}" required>
        </div>
        <div class="mb-3">
          <input type="text" class="form-control" placeholder="Consulta" name="Consulta" value="{{novedad.Consulta}}" required>
        </div>
        <button type="submit" class="btn btn-primary">Modificar</button>
      </form>
    </div>
  </div>
</div>



